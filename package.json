{
  "name": "@fastcms/webpack-config",
  "version": "1.2.2",
  "private": false,
  "description": "Shared @webpack config for web development projects of @fastcms.",
  "keywords": [
    "bundler",
    "fastcms",
    "webpack",
    "webpack-config"
  ],
  "homepage": "https://npm.im/@fastcms/webpack-config",
  "license": "MIT",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "ci": "run-s prettier eslint stylelint test:ci",
    "clean": "rimraf .DS_Store .eslintcache .stylelintcache coverage dist",
    "commit": "git-cz",
    "commit:dirty": "git-cz --no-verify",
    "eslint": "eslint --cache --ext .js,.cjs,.mjs,.jsx,.ts,.tsx,.md,.mdx .",
    "eslint:fix": "eslint --cache --fix --ext .js,.cjs,.mjs,.jsx,.ts,.tsx,.md,.mdx .",
    "prepublishOnly": "yarn run ci",
    "prettier": "prettier --check \"**/*.{json,html,md,mdx}\"",
    "prettier:fix": "prettier --write \"**/*.{json,html,md,mdx}\"",
    "stylelint": "stylelint --cache --aei \"**/*.{css,scss,less,wxss,jsx,tsx}\"",
    "stylelint:fix": "stylelint --cache --fix --aei \"**/*.{css,scss,less,wxss,jsx,tsx}\"",
    "test": "jest --cache --passWithNoTests --watch",
    "test:ci": "jest --ci --passWithNoTests"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,jsx,ts,tsx,md,mdx}": "yarn run eslint",
    "**/*.{css,scss,less,wxss,jsx,tsx}": "yarn run stylelint",
    "**/*.{json,html,md,mdx}": "yarn run prettier"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 edge version",
    "last 1 firefox version",
    "last 1 safari version",
    "last 1 ios version",
    "last 1 android version"
  ],
  "prettier": {
    "printWidth": 100,
    "quoteProps": "consistent",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@fastcms",
    "root": true
  },
  "eslintIgnore": [
    "__files__",
    "coverage",
    "dist",
    "node_modules"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/*.d.ts",
      "!__files__/**",
      "!coverage/**",
      "!node_modules/**"
    ],
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/__files__/",
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "@swc/jest"
    },
    "verbose": true
  },
  "dependencies": {
    "babel-loader": "^8.2.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "css-loader": "^6.4.0",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "dotenv-webpack": "^7.0.3",
    "esbuild-loader": "^2.16.0",
    "exports-loader": "^3.1.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.4.3",
    "shader-loader": "^1.3.1",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.1.15",
    "terser-webpack-plugin": "^5.2.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.59.1",
    "worker-loader": "^3.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@fastcms/eslint-config": "^1.8.2",
    "@fastcms/stylelint-config": "^1.4.1",
    "@swc/core": "^1.2.102",
    "@swc/jest": "^0.2.5",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.3",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "@types/webpack-env": "^1.16.3",
    "commitizen": "^4.2.4",
    "cz-emoji": "^1.3.1",
    "esbuild": "^0.13.8",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-packagejson": "^2.2.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "stylelint": "^14.0.0",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1"
  },
  "peerDependencies": {
    "@babel/core": "^7.15.8",
    "webpack": "^5.59.1"
  },
  "optionalDependencies": {
    "@swc/core": "^1.2.102",
    "esbuild": "^0.13.8"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org",
    "tag": "latest"
  }
}
